@page
@model SportsStore.Pages.CheckoutModel
@{
    Layout = "_CartLayout";
    ViewBag.Title = "Your Order";
}

<h2>Check out now</h2>
<p class="lead">Please enter your details, and we'll ship your goods right away.</p>
<div asp-validation-summary="All" class="text-danger"></div>
<div class="col">
    <form method="post">
        <h3 class="mb-3">Ship to</h3>
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label" asp-for="Order.Name"></label>
                <input class="form-control" asp-for="Order.Name" />
            </div>
        </div>
        <h3 class="my-3">Address</h3>
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label" asp-for="Order.Line1"></label>
                <input class="form-control" asp-for="Order.Line1" />
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="Order.Line2"></label>
                <input class="form-control" asp-for="Order.Line2" />
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="Order.Line3"></label>
                <input class="form-control" asp-for="Order.Line3" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Order.City"></label>
                <input class="form-control" asp-for="Order.City" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Order.Country"></label>
                <input class="form-control" asp-for="Order.Country" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Order.State"></label>
                <input class="form-control" asp-for="Order.State" />
            </div>
            <div class="col-md-3">
                <label class="form-label" asp-for="Order.Zip"></label>
                <input class="form-control" asp-for="Order.Zip" />
            </div>
        </div>
        <h3 class="my-3">Options</h3>
        <div class="row g-3">
            <div class="col-12">
                <input class="form-check-input" asp-for="Order.GiftWrap">
                <label class="form-check-label" asp-for="Order.GiftWrap"></label>
            </div>
        </div>
        <hr class="my-4">
        <button class="w-100 btn btn-primary btn-lg" type="submit">Complete order</button>
    </form>
</div>
